[environment:init]
DIALOG/autoAcceptDefault=bool:True
[environment:default]
OVEHOSTED_CORE/screenProceed=bool:True
OVEHOSTED_CORE/deployProceed=bool:True
OVEHOSTED_CORE/confirmSettings=bool:True
OVEHOSTED_CORE/skipTTYCheck=bool:True
OVEHOSTED_NETWORK/fqdn=str:{{ engine_fqdn }}
OVEHOSTED_NETWORK/bridgeName=str:ovirtmgmt
OVEHOSTED_NETWORK/bridgeIf=str:{{ interface_name }}
OVEHOSTED_NETWORK/gateway=str:{{ gateway }}
{% if he_force_ip4 is defined %}
OVEHOSTED_NETWORK/forceIPv4=bool:True
{% endif %}
{% if he_force_ip6 is defined %}
OVEHOSTED_NETWORK/forceIPv6=bool:True
{% endif %}
OVEHOSTED_ENGINE/insecureSSL=none:None
OVEHOSTED_ENGINE/clusterName=str:{{ cluster_name }}
OVEHOSTED_ENGINE/datacenterName=str:{{ dc_name }}
OVEHOSTED_STORAGE/storageDatacenterName=str:{{ storage_datacenter_name }}
OVEHOSTED_STORAGE/domainType=str:{{ storage_domain_type }}
{% if hosted_storage_type in ('iscsi', 'fcp', 'fc') %}
OVEHOSTED_STORAGE/LunID=str:{{ hosted_storage_lun }}
OVEHOSTED_ENGINE/forceCreateVG=str:{{ force_create_vg }}
{% else %}
OVEHOSTED_STORAGE/storageDomainConnection=str:{{ hosted_storage_address }}:{{ hosted_storage_path }}
{% endif %}
{% if hosted_storage_type == 'iscsi' %}
OVEHOSTED_STORAGE/iSCSIPortalIPAddress=str:{{ hosted_iscsi_portal_ip_address }}
OVEHOSTED_STORAGE/iSCSIPortalPort=str:{{ hosted_iscsi_portal_port }}
OVEHOSTED_STORAGE/iSCSIPortalUser=none:None
OVEHOSTED_STORAGE/iSCSIPortal=none:None
OVEHOSTED_STORAGE/iSCSITargetName=none:None
{% endif %}
{% if hosted_storage_type == 'nfs' %}
OVEHOSTED_STORAGE/nfsVersion=str:{{ nfs_storage_version }}
{% endif %}
{% if hosted_storage_type in ('glusterfs', 'gluster') %}
OVEHOSTED_STORAGE/glusterProvisionedShareName=str:{{ hosted_storage_name }}
OVEHOSTED_STORAGE/glusterProvisioningEnabled=bool:False
OVEHOSTED_STORAGE/glusterBrick=none:None
{% endif %}
OVEHOSTED_STORAGE/storageDomainName=str:{{ hosted_storage_name }}
{% if hosted_storage_size_gb is defined %}
OVEHOSTED_STORAGE/imgSizeGB=str:{{ hosted_storage_size_gb }}
{% endif %}
OVEHOSTED_VDSM/consoleType=str:vnc
OVEHOSTED_VM/vmMemSizeMB=int:{{ engine_vm_ram }}
OVEHOSTED_VM/vmVCpus=str:{{ engine_vm_cpus }}
OVEHOSTED_VM/ovfArchive=str:{{ engine_appliance.stdout  }}
OVEHOSTED_VM/vmMACAddr=str:{{ engine_mac_address  }}
OVEHOSTED_VM/emulatedMachine=str:rhel6.5.0
OVEHOSTED_VM/vmCDRom={{ 'none:None' if ansible_deploy else 'str:' + config_dir + '/cloud_init/cloud.iso' }}
OVEHOSTED_VM/automateVMShutdown=bool:True
OVEHOSTED_VM/cloudInitISO=str:{{ 'generate' if ansible_deploy else 'existing' }}
OVEHOSTED_VM/cloudinitInstanceDomainName=str:{{ engine_domain }}
OVEHOSTED_VM/cloudinitInstanceHostName=str:{{ engine_fqdn }}
OVEHOSTED_VDSM/spicePkiSubject=str:C=EN, L=Test, O=Test, CN=Test
OVEHOSTED_VDSM/caSubject=str:/C=EN/L=Test/O=Test/CN=TestCA
OVEHOSTED_VDSM/cpu=str:{{ cpu_model }}
OVEHOSTED_VDSM/pkiSubject=str:/C=EN/L=Test/O=Test/CN=Test
OVEHOSTED_NOTIF/smtpPort=str:25
OVEHOSTED_NOTIF/smtpServer=str:localhost
OVEHOSTED_NOTIF/sourceEmail=str:root@localhost
OVEHOSTED_NOTIF/destEmail=str:root@localhost
OVEHOSTED_VM/rootSshPubkey={{ 'str:' + root_ssh_pubkey if ansible_deploy else 'none:None' }}
OVEHOSTED_VM/cloudinitExecuteEngineSetup=bool:True
OVEHOSTED_VM/cloudinitVMStaticCIDR=str:{{ engine_vm_static_net_address }}
OVEHOSTED_VM/cloudinitVMDNS={{ 'str' if engine_vm_static_net_dns_list else 'none' }}:{{ engine_vm_static_net_dns_list if engine_vm_static_net_dns_list else 'None' }}
OVEHOSTED_VM/cloudinitRootPwd=str:{{ root_password }}
OVEHOSTED_ENGINE/adminPassword=str:{{ admin_password }}
OVEHOSTED_ENGINE/engineSetupTimeout=int:{{ engine_setup_timeout }}
OVEHOSTED_ENGINE/appHostName=str:{{ host_name }}

NETWORK/sshEnable=bool:True
NETWORK/sshUser=str:root
